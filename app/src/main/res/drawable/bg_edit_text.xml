<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>

            <item android:bottom="@dimen/_2sdp">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
                    <solid android:color="@color/colorOnSecondary" />
                </shape>
            </item>

            <item android:height="@dimen/_2sdp" android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorOnPrimary" />
                </shape>
            </item>


        </layer-list>


    </item>
    <item android:state_focused="false">
        <layer-list>

            <item android:bottom="@dimen/_1sdp">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
                    <solid android:color="@color/colorOnSecondary" />
                </shape>
            </item>

            <item android:height="@dimen/_1sdp" android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorOnPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
